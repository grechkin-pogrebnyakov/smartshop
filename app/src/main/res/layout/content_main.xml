<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/content_main_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_main_chart"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.technopark.smartbiz.MainActivity"
            >

            <Button
                android:id="@+id/button_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Logout"
                />

            <Button
                android:id="@+id/go_to_add_product"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_logout"
                android:layout_marginTop="16dp"
                android:text="Добавить продукт"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/content_main_button_purchase"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/go_to_add_product"
                android:layout_marginTop="16dp"
                android:text="@string/content_main_button_new_check"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/content_main_button_show_products"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_main_button_purchase"
                android:layout_marginTop="16dp"
                android:text="@string/content_main_button_show_products"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/content_main_button_edit_shop_profile"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_main_button_show_products"
                android:layout_marginTop="16dp"
                android:text="@string/content_main_button_edit_shop_profile"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/content_main_button_supply"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_main_button_edit_shop_profile"
                android:layout_marginTop="16dp"
                android:text="@string/content_main_button_supply"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>