<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technopark.smartbiz.SupplyActivity"
    >

    <ListView
        android:id="@+id/activity_supply_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_supply_layout_done"
        android:layout_alignParentTop="true"
        />

    <RelativeLayout
        android:id="@+id/activity_supply_layout_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        >

        <Button
            android:id="@+id/activity_supply_button_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/activity_supply_button_done"
            />

    </RelativeLayout>

</RelativeLayout>
